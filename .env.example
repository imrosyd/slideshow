# Copy this file to `.env` or `.env.production` and fill values before running
# Do NOT commit real secrets to git. Use this only as an example/template.

# Prisma (PostgreSQL)
# Example: postgresql://user:password@localhost:5432/slideshow_db
# NOTE: Prisma 7 requires a valid `DATABASE_URL` environment variable.
# It cannot be empty. For local development, put a local Postgres connection string here.
DATABASE_URL="postgresql://slideshow_user:your_secure_password@postgres:5432/slideshow_db"

# Toggle whether to use Prisma as the primary adapter. Set to `true` when
# `DATABASE_URL` is configured. If you set `USE_PRISMA=false`, the app will
# not initialize the Prisma client (useful for read-only docs or other
# deployment scenarios). Default: `true` when DATABASE_URL is present.
USE_PRISMA=true

# Admin
ADMIN_PASSWORD=admin

# Storage (filesystem)
USE_FILESYSTEM_STORAGE=true
STORAGE_PATH=./storage
STORAGE_PUBLIC_URL=/api/storage

# App
NODE_ENV=production
PORT=3000
